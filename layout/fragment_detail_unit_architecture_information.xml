<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexa.appdaw.DetailUnitArchitectureInformationFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ima_detail_theme"
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:layout_height="190dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_important_devices_black_24dp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EEAD43">

                <TextView
                    android:id="@+id/tex_title_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Arquitectura de la informaciÃ³n"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tex_description_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/object_unit_architecture_information"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ima_firts_theme"
                    android:layout_width="260dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phonelink_setup_black_24dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/tex_description_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/parte_objective_arquitecture_information"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ima_second_theme"
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:src="@drawable/information_theme"
                    android:scaleType="fitXY"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tex_description_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:text="@string/part_three_theme_architecture_information"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ima_third_theme"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
