<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.alexa.appdaw.UnitTwoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Unidad II"
                android:textSize="25dp"
                android:textColor="@color/white"/>


            <Button
                android:id="@+id/btn_menu_themes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/fforange"
                android:text="Temas"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_menu_concepts"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/orange"
                android:text="Conceptos"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_menu_exercises"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/purple"
                android:text="Ejercicios"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_menu_games"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/yello"
                android:text="Juegos"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_menu_videos"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/Bblue"
                android:text="Videos"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/btn_menu_quiz_two"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/salmon"
                android:text="Quiz"
                android:textStyle="bold"
                android:textSize="30dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
