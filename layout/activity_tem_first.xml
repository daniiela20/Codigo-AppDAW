<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexa.appdaw.FirstTemActivity"
    android:background="@drawable/tfd"
    android:orientation="vertical"
    android:gravity="center">


    <Button
        android:id="@+id/btn_unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/button_tem"
        android:onClick="ShowPopup"
        android:text="@string/title_unit_one"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_unit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_unit1"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_tem"
        android:onClick="ShowPopupII"
        android:text="@string/title_unit_two"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="204dp" />

    <Button
        android:id="@+id/btn_unit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unit2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="95dp"
        android:background="@drawable/button_tem"
        android:onClick="ShowPopupIII"
        android:text="@string/title_unit_three"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="101dp" />

    <Button
        android:id="@+id/btn_unit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_unit3"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_tem"
        android:onClick="ShowPopupIV"
        android:text="@string/title_unit_four"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/btn_unit5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_tem"
        android:layout_marginLeft="60dp"
        android:onClick="ShowPopupV"
        android:text="@string/title_unit_five"
        android:textColor="@color/white"/>


</RelativeLayout >
