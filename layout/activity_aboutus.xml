<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexa.appdaw.AboutUsActivity"
    android:background="#087966">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textSize="@dimen/name_size"
                android:textColor="#0CF8DE"
                android:layout_gravity="center"
                android:text="@string/developer_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="@dimen/size_rol"
                android:textColor="#0CF8DE"
                android:layout_gravity="center_horizontal"
                android:text="@string/developer"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textSize="@dimen/name_size"
                android:textColor="#0CF8DE"
                android:layout_gravity="center"
                android:text="@string/developer_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="#0CF8DE"
                android:textSize="@dimen/size_rol"
                android:layout_gravity="center_horizontal"
                android:text="@string/developer"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0CF8DE"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textSize="@dimen/name_size"
                android:textColor="#0CF8DE"
                android:layout_gravity="center"
                android:text="@string/developer_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="@dimen/size_rol"
                android:textColor="#0CF8DE"
                android:layout_gravity="center_horizontal"
                android:text="@string/developer_man"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0CF8DE"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textSize="@dimen/name_size"
                android:textColor="#0CF8DE"
                android:layout_gravity="center"
                android:text="@string/description_pop_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="@dimen/size_rol"
                android:textColor="#0CF8DE"
                android:layout_gravity="center_horizontal"
                android:text="@string/url_pop_up"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0CF8DE"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textSize="@dimen/size_url"
                android:textColor="#0CF8DE"
                android:layout_gravity="center"
                android:text="@string/description_layout_canaria"
                tools:ignore="SpUsage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textSize="@dimen/size_rol"
                android:textColor="#0CF8DE"
                android:layout_gravity="center_horizontal"
                android:text="@string/url_layout_canaria"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0CF8DE"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>



        </LinearLayout>
    </LinearLayout>

</ScrollView>
